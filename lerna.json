{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "npm",
  "version": "independent",
  "packages": ["packages/*"],
  "ignoreChanges": ["**/*.md", "**/.!(npmignore)", "**/*.sh"],
  "useNx": true,
  "useWorkspaces": true,
  "command": {
    "changed": {
      "conventionalCommits": true
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true
    }
  }
}
