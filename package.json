{
  "name": "dev",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "bootstrap": "lerna bootstrap",
    "graph": "nx graph",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "lint-pr": "run-s lint-pr:*",
    "lint-pr:prettier": "prettier --check $(git diff refs/remotes/origin/master... --name-only) --no-error-on-unmatched-pattern",
    "lint-pr:eslint": "eslint . $(git diff refs/remotes/origin/master... --name-only -- '*.js' '*.jsx' '*.ts' '*.tsx') --no-error-on-unmatched-pattern",
    "test": "lerna run test --since=origin/master"
  },
  "devDependencies": {
    "@janejeon/eslint-config": "*",
    "@janejeon/prettier-config": "*",
    "husky": "^8.0.1",
    "lerna": "^6.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "skip-ci": "*"
  }
}
